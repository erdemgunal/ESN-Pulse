# ESN PULSE Environment Configuration

# Application Settings
APP_NAME=ESN PULSE
APP_VERSION=1.0.0 
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL= # PostgreSQL veritabanı bağlantı adresi
DATABASE_POOL_SIZE= # Veritabanı bağlantı havuzu boyutu
DATABASE_MAX_OVERFLOW= # Veritabanı bağlantı havuzunda taşmaya izin verilen maksimum bağlantı sayısı

# Redis/Celery Configuration
REDIS_URL= # Redis bağlantı adresi
CELERY_BROKER_URL= # Celery broker bağlantı adresi (Redis veya RabbitMQ)
CELERY_RESULT_BACKEND= # Celery sonuç arka ucu bağlantı adresi

# Scraping Configuration
SCRAPING_DELAY=0.5
MAX_RETRIES=3
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# ESN Platform URLs
ACCOUNTS_BASE_URL=https://accounts.esn.org
ACTIVITIES_BASE_URL=https://activities.esn.org

# Logging Configuration
LOG_DIR=logs
LOG_FILE_FORMAT=esn_pulse_{date}.log

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Performance Settings
PAGINATION_CHUNK_SIZE=5
BULK_INSERT_BATCH_SIZE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT= # Metriklerin yayınlanacağı port numarası

# .env - Bu dosya Git'e eklenmeyecek
POSTGRES_DB= # PostgreSQL veritabanı adı
POSTGRES_USER= # PostgreSQL kullanıcı adı
POSTGRES_PASSWORD= # PostgreSQL şifresi
REDIS_URL= # Redis bağlantı adresi
CELERY_BROKER_URL= # Celery broker bağlantı adresi (Redis veya RabbitMQ)
CELERY_RESULT_BACKEND= # Celery sonuç arka ucu bağlantı adresi
LOG_LEVEL=INFO
DEBUG=false